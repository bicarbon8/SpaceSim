{
  "name": "space-sim-server",
  "version": "1.0.0",
  "description": "game server for multiplayer version of Spaceship Game",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:express-server && npm run build:game-bundle && npm run copy-files",
    "build:express-server": "tsc -b",
    "build:game-bundle": "webpack --config ./webpack.prod.config.cjs",
    "copy-files": "copyfiles -E -V -u 1 ./src/**/*.html ./dist/",
    "start": "npm run build && node ./dist/server.js",
    "test": ""
  },
  "keywords": [
    "phaser",
    "html game",
    "typescript game",
    "spaceship game"
  ],
  "author": "Jason Holt Smith <bicarbon8@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.10.2",
    "express": "^4.18.2",
    "jsdom": "^20.0.3",
    "phaser": "^3.55.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jsdom": "^20.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
