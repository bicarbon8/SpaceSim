{
  "name": "space-sim-server",
  "version": "1.0.0",
  "description": "game server for multiplayer version of Spaceship Game",
  "type": "module",
  "main": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:express-server && npm run build:game-bundle",
    "build:dev": "npm run clean && npm run build:express-server && npm run build:game-bundle:dev",
    "build:express-server": "tsc -b",
    "build:game-bundle": "webpack --env production --config ./webpack.config.cjs",
    "build:game-bundle:dev": "webpack --config ./webpack.config.cjs",
    "start": "npm run build && npm run open",
    "start:dev": "npm run build:dev && npm run open",
    "open": "ts-node ./src/server.ts",
    "test": ""
  },
  "keywords": [
    "phaser",
    "html game",
    "typescript game",
    "spaceship game"
  ],
  "author": "Jason Holt Smith <bicarbon8@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@mikewesthad/dungeon": "^2.0.1",
    "canvas": "^2.10.2",
    "datauri": "^4.1.0",
    "express": "^4.18.2",
    "jsdom": "^20.0.3",
    "phaser": "^3.55.2",
    "phaser-server": "^1.0.0",
    "phaser-ui-components": "^3.0.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jsdom": "^20.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "file-replace-loader": "^1.4.0",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
