{
	"$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"cli": {
		"cache": {"enabled": false}
	},
	"newProjectRoot": "projects",
	"projects": {
		"space-sim": {
			"projectType": "application",
			"schematics": {},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "ngx-build-plus:browser",
					"options": {
						"outputPath": "dist/space-sim",
						"index": "src/index.html",
						"main": "src/main.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.app.json",
						"assets": [
							{
								"glob": "**/*", 
								"input": "../server/src/assets", 
								"output": "./assets/"
							},
							"src/favicon.ico",
							"src/assets",
							"src/.nojekyll"
						],
						"styles": [
							"../../node_modules/bootstrap/dist/css/bootstrap.min.css",
							"src/styles.css"
						],
						"scripts": [
							"../../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
						],
						"vendorChunk": true,
						"extractLicenses": false,
						"buildOptimizer": false,
						"sourceMap": true,
						"optimization": false,
						"namedChunks": true,
						"extraWebpackConfig": "webpack.config.cjs",
						"commonChunk": false
					},
					"configurations": {
						"production": {
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							],
							"optimization": true,
							"sourceMap": false,
							"namedChunks": false,
							"extractLicenses": true,
							"vendorChunk": false,
							"buildOptimizer": true,
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2mb",
									"maximumError": "5mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "6kb",
									"maximumError": "10kb"
								}
							],
							"extraWebpackConfig": "webpack.prod.config.cjs"
						}
					},
					"defaultConfiguration": ""
				},
				"serve": {
					"builder": "ngx-build-plus:dev-server",
					"options": {
						"browserTarget": "space-sim:build",
						"port": 4500,
						"publicHost": "http://localhost:4500",
						"extraWebpackConfig": "webpack.config.cjs"
					},
					"configurations": {
						"production": {
							"browserTarget": "space-sim:build:production",
							"extraWebpackConfig": "webpack.prod.config.cjs"
						}
					}
				},
				"extract-i18n": {
					"builder": "ngx-build-plus:extract-i18n",
					"options": {
						"browserTarget": "space-sim:build",
						"extraWebpackConfig": "webpack.config.cjs"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.spec.json",
						"karmaConfig": "karma.conf.js",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.css"
						],
						"scripts": []
					}
				},
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"protractorConfig": "e2e/protractor.conf.js",
						"devServerTarget": "space-sim:serve"
					},
					"configurations": {
						"production": {
							"devServerTarget": "space-sim:serve:production"
						}
					}
				}
			}
		}
	},
	"defaultProject": "space-sim"
}