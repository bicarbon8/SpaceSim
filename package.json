{
    "name": "space-sim",
    "workspaces": [
        "projects/phaser-server",
        "projects/phaser-server-engine",
        "projects/server",
        "projects/client"
    ],
    "scripts": {
        "clean": "rimraf ./dist && rimraf ./docs",
        "build": "npm run clean && npm run build --workspaces --if-present && npm run copy-dist-to-root && npm run copy-docs-to-root",
        "build:dev": "npm run build:dev --workspaces --if-present",
        "copy-dist-to-root": "copyfiles -u 3 \"./projects/**/dist/**/*\" ./dist/",
        "copy-docs-to-root": "copyfiles -u 3 \"./projects/**/docs/**/*\" ./docs/",
        "test": "npm run test --workspaces --if-present",
        "start": "npm run start --workspaces --if-present"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "dpdm": "^3.9.0",
        "lerna": "^5.5.2",
        "rimraf": "^3.0.2",
        "typedoc": "^0.23.15"
    },
    "private": true
}
